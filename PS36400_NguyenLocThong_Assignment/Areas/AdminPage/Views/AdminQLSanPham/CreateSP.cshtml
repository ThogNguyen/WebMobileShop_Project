@model PS36400_NguyenLocThong_Assignment.ViewModels.SanphamVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminPage/Views/Shared/_Layout.cshtml";
}

<h1>Thêm mới sản phẩm</h1>
<a asp-action="IndexSP" asp-controller="AdminQLSanPham" class="btn btn-danger">Trở về</a>

<hr />
<div class="row">
    <div class="col-md-6 mx-auto">
        <form asp-action="CreateSP" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-6">
                    Tên sản phẩm
                    <input asp-for="TenSp" class="form-control" />
                    <span asp-validation-for="TenSp" class="text-danger"></span>
                        </div>
                <div class="form-group col-md-6">
                    Giá sản phẩm
                    <input asp-for="GiaSp" class="form-control" />
                    <span asp-validation-for="GiaSp" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                Ảnh sản phẩm
                <input asp-for="HinhSp" class="form-control" />
                <span asp-validation-for="HinhSp" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    Chip
                    <input asp-for="Chip" class="form-control" />
                    <span asp-validation-for="Chip" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    Kích thước màn hình
                    <input asp-for="ManHinh" class="form-control" />
                    <span asp-validation-for="ManHinh" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    Ram
                    <input asp-for="Ram" class="form-control" />
                    <span asp-validation-for="Ram" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    Rom
                    <input asp-for="Rom" class="form-control" />
                    <span asp-validation-for="Rom" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                Số lượt bán
                <input asp-for="Soluotban" readonly value="0" class="form-control" />
                <span asp-validation-for="Soluotban" class="text-danger"></span>
            </div>
            <div class="form-group">
                Ngày đăng sản phẩm
                <input asp-for="NgaydangSp" class="form-control" />
                <span asp-validation-for="NgaydangSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                Tên loại sản phẩm
                <select asp-for="MaLoaiSp" class ="form-control" asp-items="ViewBag.MaLoaiSp"></select>
            </div>
            <div class="form-group">
                <button class="btn btn-primary mb-4 float-right" type="submit">Thêm</button>
            </div>
        </form>
    </div>
</div>

