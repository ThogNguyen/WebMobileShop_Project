@{
    ViewData["Title"] = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<PS36400_NguyenLocThong_Assignment.Models.SanPham>

@{
    // Sắp xếp sản phẩm mới theo ngày đăng sản phẩm
    var sapxepspmoi = Model.OrderByDescending(p => p.NgaydangSp).Take(4);
}


@{
    // Sắp xếp sản phẩm mới theo ngày đăng sản phẩm
    var sapxepspbanchay = Model.OrderByDescending(p => p.Soluotban).Take(4);
}



<!-- HEADER -->
    <header>
        <div class="container">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/image/slideheader1.png" class="d-block w-100" alt="banner1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/image/slideheader2.png" class="d-block w-100" alt="banner2">
                    </div>
                    <div class="carousel-item">
                        <img src="~/image/slideheader3.png" class="d-block w-100" alt="banner3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        
    </header>

<div class="container">
    <div class="row py-5">
        <div class="col-md-12 text-center py-2">
            <h3 class="text-uppercase title-type-product">Sản phẩm mới</h3>
        </div>
        <hr />
        <div class="col-md-12">
            <div class="row">
                @foreach (var item in sapxepspmoi)
                {
                    <div class="col-md-3 col-sm-6 d-flex p-2 justify-content-center">
                        <div class="card text-center">
                            <a asp-controller="DanhMucSP" asp-action="DetailProduct" asp-route-id="@item.MaSp">
                                <img class="product-image" src="~/image/@item.HinhSp">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title text-center product-name">@item.TenSp</h5>
                                <p class="card-text text-center text-danger text-giasp" >
                                    @String.Format("{0:N0}", @item.GiaSp)đ
                                </p>
                                <div class="cdt-product__config__param">
                                    <div class="param-item">
                                        <i class="bi bi-cpu" title="CPU"></i>@item.Chip
                                    </div>
                                    <div class="param-item">
                                        <i class="bi bi-phone" title="Màn Hình"></i>@item.ManHinh inches
                                    </div>
                                    <div class="param-item">
                                        <i class="bi bi-memory" title="RAM"></i>@item.Ram GB
                                    </div>
                                    <div class="param-item">
                                        <i class="bi bi-hdd" title="ROM"></i>@item.Rom GB
                                    </div>
                                </div>
                                <div class="btn-group d-flex justify-content-center" role="group">
                                    <a asp-action="addtoCart" asp-controller="Cart" asp-route-id="@item.MaSp" class="btn btn-outline-success btn-sm">Thêm vào giỏ</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


    <div class="row py-5">
        <div class="container">
            <div class="col-md-12">
                <img src="~/image/banner-mid.png" class="d-block w-100 img-fluid" alt="banner1">
            </div>
        </div>
    </div>

    <div class="row py-5">
        <div class="col-md-12 text-center py-2">
            <h3 class="text-uppercase title-type-product">Sản phẩm bán chạy</h3>
        </div>
        <hr />
        <div class="col-md-12">
            <div class="row">
                @foreach (var item in sapxepspbanchay)
                {
                    <div class="col-md-3 col-sm-6 d-flex p-2 justify-content-center">
                        <div class="card text-center">
                            <a asp-controller="DanhMucSP" asp-action="DetailProduct" asp-route-id="@item.MaSp">
                                <img class="product-image" src="~/image/@item.HinhSp">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title text-center product-name">@item.TenSp</h5>
                                <p class="card-text text-center text-danger text-giasp">
                                    @String.Format("{0:N0}", @item.GiaSp)đ
                                </p>
                                <div class="cdt-product__config__param">
                                    <div class="param-item">
                                        <i class="bi bi-cpu" title="CPU"></i>@item.Chip
                                    </div>
                                    <div class="param-item">
                                        <i class="bi bi-phone" title="Màn Hình"></i>@item.ManHinh inches
                                    </div>
                                    <div class="param-item">
                                        <i class="bi bi-memory" title="RAM"></i>@item.Ram GB
                                    </div>
                                    <div class="param-item">
                                        <i class="bi bi-hdd" title="ROM"></i>@item.Rom GB
                                    </div>
                                </div>
                                <div class="btn-group d-flex justify-content-center" role="group">
                                    <a asp-action="addtoCart" asp-controller="Cart" asp-route-id="@item.MaSp" class="btn btn-outline-success btn-sm">Thêm vào giỏ</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
