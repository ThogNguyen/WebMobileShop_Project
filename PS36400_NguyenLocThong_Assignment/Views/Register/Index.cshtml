@{
    ViewData["Title"] = "Đăng Ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model PS36400_NguyenLocThong_Assignment.Models.NguoiDung;

<div class="row p-5">
    <div class="col-lg-5 m-auto">
        <h1 class="text-center mb-3">Đăng Ký</h1>
        <form asp-action="Index" asp-controller="Register" enctype="multipart/form-data">
            <!-- Email -->
            <div class="mb-3">
                <label class="form-label">Email</label>
                <div class="input-group mb-3">
                    <span class="input-group-text bi bi-person"></span>
                    <input asp-for="@Model.Email" class="form-control" placeholder="Nhập email của bạn">
                </div>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <!-- Họ và tên -->
            <div class="mb-3">
                <label class="form-label">Họ và tên</label>
                <div class="input-group mb-3">
                    <span class="input-group-text bi bi-person"></span>
                    <input asp-for="@Model.HoTen" class="form-control" placeholder="Nhập họ và tên của bạn">
                </div>
                <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
            </div>

            <!-- Số Điện Thoại-->
            <div class="mb-3">
                <label class="form-label">Số Điện Thoại</label>
                <div class="input-group mb-3">
                    <span class="input-group-text bi bi-telephone"></span>
                    <input asp-for="@Model.Sdt" class="form-control" placeholder="Nhập số điện thoại của bạn">
                </div>
                <span asp-validation-for="@Model.Sdt" class="text-danger"></span>
            </div>

            <!-- Địa chỉ -->
            <div class="mb-3">
                <label class="form-label">Địa chỉ</label>
                <div class="input-group mb-3">
                    <span class="input-group-text bi bi-house"></span>
                    <input asp-for="@Model.DiaChi" class="form-control" placeholder="Nhập địa chỉ của bạn">
                </div>
                <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
            </div>

            <!-- Mật khẩu -->
            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <div class="input-group mb-3">
                    <span class="input-group-text bi bi-lock"></span>
                    <input asp-for="@Model.MatKhau" class="form-control" placeholder="Nhập mật khẩu của bạn">
                </div>
                <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
            </div>


            <div class="d-grid mt-2">
                <button type="submit" class="btn btn-success">Đăng Ký</button>
            </div>

            <p class="text-center mt-2">
                Bạn đã có tài khoản ? Đăng nhập tại <a asp-controller="Login" asp-action="Index">đây</a>
            </p>
        </form>
    </div>
</div>
