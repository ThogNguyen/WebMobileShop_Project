@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model PS36400_NguyenLocThong_Assignment.Models.NguoiDung;


<div class="row p-5">
    <div class="col-lg-5 m-auto">
        <h1 class="text-center mb-3">Đăng Nhập</h1>
        <form asp-action="Index" asp-controller="Login" method="post">
            
            <!-- Email -->
            <div class="mb-3">
                <label class="form-label">Email</label>
                <div class="input-group mb-3">
                    <span class="input-group-text bi bi-person"></span>
                    <input asp-for="@Model.Email" class="form-control" placeholder="Nhập email của bạn">
                </div>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
             <!-- Mật khẩu -->
            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <div class="input-group mb-3">
                <span class="input-group-text bi bi-lock"></span>
                    <input asp-for="@Model.MatKhau" class="form-control" placeholder="Nhập mật khẩu của bạn">
                </div>
                <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
            </div>

            @if (TempData["error"] != null)
            {
                <div class="text-center alert alert-danger" style="font-size: 18px; font-weight: bold">@TempData["error"]</div>
            }
            <div class="d-grid">
                <button type="submit" class="btn btn-success">Đăng Nhập</button>
                <p class="text-center mt-2">
                    Bạn chưa có tài khoản ? Đăng ký tại <a asp-controller="Register" asp-action="Index">đây</a>
                </p>
            </div>
        </form>
    </div>
</div>
